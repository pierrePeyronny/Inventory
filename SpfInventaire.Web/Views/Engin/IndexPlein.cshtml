@model IEnumerable<SpfInventaire.Core.DAL.Models.PleinEssence>

@{
    ViewBag.Title = "IndexPlein";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    @Styles.Render("~/Content/datatables.min.css")
}




<h2>Historique Pleins</h2>

<table id="tableauDatatable" class="table table-striped table-bordered" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Engin.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kilometrage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Litrage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prix)
            </th>
            <th class="firstColumnOrder">
                @Html.DisplayNameFor(model => model.DateCreation)
            </th>
            <th class="noSortingColumn"></th>
        </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Engin.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kilometrage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Litrage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prix)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreation)
                </td>
                <td>
                    <div class="divIconesActionsTDB" style="width: 100px;">
                        @if (ViewBag.isAdmin)
                        {
                            <a href="@Url.Action("EditPlein",new { id = item.ID })" alt="Modifier" data-toggle="tooltip" title="Modifier">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    @Scripts.Render("~/bundles/datatable")
}
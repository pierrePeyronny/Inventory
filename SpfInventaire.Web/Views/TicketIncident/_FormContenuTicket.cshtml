        @Html.DropDownListFor(model => model.unTicket.Inventaire, Model.listInventaire, htmlAttributes: new { @id = "ddlInventaire", @class = "form-control" })
        @Html.ValidationMessageFor(model => model.unTicket.Inventaire, "", new { @class = "text-danger" })

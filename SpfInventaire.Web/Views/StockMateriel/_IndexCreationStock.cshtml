@model IEnumerable<SpfInventaire.Core.DAL.Models.StockMateriel>


<table class="table table-striped table-bordered" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatePeremption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="tdColumnCenter">
                    @Html.DisplayFor(modelItem => item.Quantite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DatePeremption)
                </td>
                <td>
                    <div class="divIconesActionsTDB">
                        <a class="editButtonTDB" data-id="@item.ID" alt="Modifier" data-toggle="tooltip" title="Modifier">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a class="TransfertButtonTDB" data-id="@item.ID" alt="Modifier" data-toggle="tooltip" title="Transferer">
                            <span class="glyphicon glyphicon-random" aria-hidden="true"></span>
                        </a>
                        <a class="deleteButton" data-id="@item.ID" alt="Voir détail" data-toggle="tooltip" title="Supprimer">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

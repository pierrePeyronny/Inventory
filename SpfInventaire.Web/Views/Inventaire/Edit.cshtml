@model SpfInventaire.Core.DAL.Models.Inventaire

@{
    ViewBag.Title = "Modification";
}

<h2>Modification</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Inventaire</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.DateCreation)
        @Html.HiddenFor(model => model.DateModification)

        @Html.Partial("_FormInventaire", Model)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Liste des Inventaires", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
}

@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Index";
}


<h2>Liste Roles</h2>

<p class="actionLinksIndexPage">
    @Html.ActionLink("Ajouter un Role", "Create")
</p>
<table class="table table-striped table-bordered" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="noSortingColumn"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="tdColumnRight">
                    <div class="divIconesActionsTDB">
                        <a href="@Url.Action("Edit",new { id = item.Id })" alt="Modifier" data-toggle="tooltip" title="Modifier">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a class="detailButtonTDB" href="@Url.Action("Delete",new { id = item.Id })" alt="Voir détail" data-toggle="tooltip" title="Supprimer" style="color: red;">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.isAdminTicket)
{
    <div class="form-group">
        @Html.LabelFor(model => model.unTicket.Statut, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EnumDropDownListFor(model => model.unTicket.Statut, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.unTicket.Statut, "", new { @class = "text-danger" })

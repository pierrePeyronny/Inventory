<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SP2F Inventaire</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="loaderGeneral" style="display: none;"></div>
    @Html.Partial("_NavBar")

    <div class="container body-content">
        @Html.Partial("_ModalEdit")
        @RenderBody()
        <hr />
        @Html.Partial("_Notifications")
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - SP2F Inventaire</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/ViewScripts/PopUpModal.js")

    <script>
        var applicationUrl = '@Url.Content("~/")';
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>

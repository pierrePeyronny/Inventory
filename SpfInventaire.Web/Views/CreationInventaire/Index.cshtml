@model IEnumerable<SpfInventaire.Core.DAL.Models.Inventaire>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    @Styles.Render("~/Content/themes/base/jquery-ui.min.css")
}

<h2 class="TitreBleuBootstrap">Création Inventaire</h2>

<hr />
<form class="formAssociationPFSD">
    <div class="form-horizontal">
        <div id="listInventaires" class="form-group">
            @Html.Label("Inventaires", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach (var item in Model)
                {
                    <label class="checkbox-inline">
                        @Html.RadioButton("inventaireGroupe", item.ID, new { htmlAttributes = new { @class = "form-control" } }) @item.Nom
                    </label>
                }
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Blocs Inventaire", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-7">
                <div class="input-group">
                    <select class="form-control control-PFSD" id="listBlocs">
                        <option value="0">Aucun Bloc</option>
                    </select>
                    <div class="input-group-btn">
                        <button id="buttonAddBloc" class="btn btn-default" type="button" title="Créer un Bloc">
                            <span class="glyphicon glyphicon-plus buttonAddListeAssociation" aria-hidden="true"></span>
                        </button>
                        <button id="buttonEditBloc" class="btn btn-default" type="button" title="Modifier le Bloc">
                            <span class="glyphicon glyphicon-pencil buttonEditListeAssociation" aria-hidden="true"></span>
                        </button>
                        <button id="buttonSortBloc" class="btn btn-default" type="button" title="Ordre des Blocs">
                            <span class="glyphicon glyphicon-sort-by-alphabet" aria-hidden="true"></span>
                        </button>
                        <span id="loaderBloc" class="glyphicon glyphicon-refresh glyphicon-refresh-animate loaderListeAssociation" style="display: none;"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Matériels", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-7">
                <div class="input-group">
                    <select class="form-control control-PFSD" id="listMateriel">
                        <option value="">Aucun Matériel</option>
                    </select>
                    <div class="input-group-btn">
                        <button id="buttonAddMateriel" class="btn btn-default" type="button" title="Créer un Matériel">
                            <span class="glyphicon glyphicon-plus buttonAddListeAssociation" aria-hidden="true"></span>
                        </button>
                        <button id="buttonEditMateriel" class="btn btn-default" type="button" title="Modifier le Matériel">
                            <span class="glyphicon glyphicon-pencil buttonEditListeAssociation" aria-hidden="true"></span>
                        </button>
                        <button id="buttonSortMateriel" class="btn btn-default" type="button" title="Ordre Matériels">
                            <span class="glyphicon glyphicon-sort-by-alphabet" aria-hidden="true"></span>
                        </button>
                        <span id="loaderMateriel" class="glyphicon glyphicon-refresh glyphicon-refresh-animate loaderListeAssociation" style="display: none;"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Actions Matériel", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-7">
                <div class="btn-group" role="group" aria-label="...">
                    <button id="buttonAddStock" type="button" class="btn btn-primary">Ajouter un Stock</button>
                </div>
            </div>
        </div>
    </div>
</form>

<form>
    <div id="blocGestionStocks">

    </div>
</form>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryUi")
    @Scripts.Render("~/bundles/AjaxService")
    @Scripts.Render("~/Scripts/ViewScripts/BoutonInventaire.js")
    @Scripts.Render("~/Scripts/ViewScripts/CreationInventaire.js")
    @Scripts.Render("~/Scripts/ViewScripts/TicketForm.js")
    <script>
        $(document).ready(function () {
            CreationInventaire = new CreationInventaire();
            TicketForm = new TicketForm();
        });
    </script>
}

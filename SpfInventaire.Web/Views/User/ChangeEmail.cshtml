@model SpfInventaire.Core.DAL.ViewModels.ChangeEmailViewModel
@{
    ViewBag.Title = "Modification Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title.</h2>
<hr />
@using (Html.BeginForm("ChangeEmail", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => m.newEmail, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.newEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.newEmail, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Modifier" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

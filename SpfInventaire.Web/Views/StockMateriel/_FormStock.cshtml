@using SpfInventaire.Core.DAL.ViewModels
@model StockMaterielFormViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Stock Matériel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @if (Model.isEdit)
        {
            @Html.HiddenFor(model => model.unStock.ID)
            @Html.HiddenFor(model => model.unStock.TypeMaterielID)
            @Html.HiddenFor(model => model.unStock.DateCreation)
            @Html.HiddenFor(model => model.unStock.DateModification)
        }

        @Html.Partial("_FormContenuStock", Model)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @if (Model.isEdit)
                {
                    <input type="submit" value="Enregistrer" class="btn btn-primary" />
                }
                else
                {
                    <input type="submit" value="Créer" class="btn btn-primary" />
                }
            </div>
        </div>


    </div>
}
